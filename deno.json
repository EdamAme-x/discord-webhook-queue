{
  "name": "@evex/discord-webhook-queue",
  "version": "0.1.0",
  "exports": "./mod.ts",
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-env mod.ts",
    "start": "deno run --allow-net --allow-env mod.ts",
    "test": "deno test --allow-net --allow-env",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check mod.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/http": "jsr:@std/http@^1.0.0",
    "@std/log": "jsr:@std/log@^0.224.0",
    "@types/node": "npm:@types/node@^22.0.0"
  },
  "compilerOptions": {
    "strict": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": [
      "examples/",
      "adapters/redis.ts"
    ]
  }
}
